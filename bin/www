#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('node-api:server');
var http = require('http');
const GracefulShutdownManager = require('@moebius/http-graceful-shutdown').GracefulShutdownManager;
/**
 * Get port from environment and store in Express.
 */

var PORT = normalizePort(process.env.PORT || '3000');
var sysArgv = process.argv[2];
if (sysArgv != ""){
  console.log("User supplied port: "+sysArgv+"\n");
  PORT = sysArgv;
} // if you don't supply a port, default to 3000

app.set('PORT', PORT);

/**
 * Create HTTP server.
 */
const server = app.listen(PORT, () => console.log('Runningâ€¦ on PORT:' + PORT));
const shutdownManager = new GracefulShutdownManager(server);
/**
 * Listen on provided port, on all network interfaces.
 */
var checkConnection = function() {
process.on('SIGTERM', () => {
  shutdownManager.terminate(() => {
    process.exit(1)
    console.log('Server is gracefully terminated');
  });
});
process.on('SIGINT', () => {
  shutdownManager.terminate(() => {
    process.exit(1)
    console.log('Server is gracefully terminated');
  });
});
};

server.on('listening', onListening);
server.on('connection', connection => {
    checkConnection()
});

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
